#include<stdio.h>
#include<conio.h>
#include<math.h>
#define f(x) (x-cos(x))
#define df(x) (x+sin(x))
#define e 0.0001
int main()
{
    int i=0;
    float a,b,x0,x1,f0,f1,df0;
    printf("Fn is x-cos(x)");
    printf("\nEnter value of a=");
    scanf("%f",&a);
    printf("Enter value of b=");
    scanf("%f",&b);
    printf("Enter a  guess value of x0=");
    scanf("%f",&x0);
    do
    {
    f0=f(x0);
    df0=df(x0);
    x1=x0 - (f0/df0);
    f1=f(x1);
    x0=x1;
    i++;
    printf("\nIteration:%d\t",i);
    printf("Root Value:%f\t",x1);
    }
    while(fabs(f1)>e);
    printf("\nApproximate root:%f",x1);
    return 0;
}
